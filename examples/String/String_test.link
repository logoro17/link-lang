# === NEBULA OS: STRING LIBRARY TEST ===

# 1. Setup Konfigurasi (Test Multiline Dictionary)
set config = {
    "app_name": "StringTester",
    "version": "1.0",
    "divider": "--------------------------------"
}

print("Running " + config["app_name"] + " v" + config["version"])
print(config["divider"])

# 2. TEST TRIM (Menghapus spasi depan/belakang)
set raw_input = "    User: Admin    "
print("[TEST 1] Trim")
print("Original : '" + raw_input + "'")
set clean_input = str.trim(raw_input)
print("Result   : '" + clean_input + "'")

if clean_input == "User: Admin"
    print("Status   : PASSED")
else
    print("Status   : FAILED")
print(config["divider"])

# 3. TEST REPLACE (Ganti teks)
set message = "Error: Disk Full. Error: Retry."
print("[TEST 2] Replace")
print("Original : " + message)

# Mengganti semua kata "Error" menjadi "Warning"
set fixed_msg = str.replace(message, "Error", "Warning")
print("Result   : " + fixed_msg)
print(config["divider"])

# 4. TEST SPLIT (Memecah string menjadi List)
set csv_data = "192.168.1.1,8080,active,admin"
print("[TEST 3] Split (Parsing CSV)")
print("Data     : " + csv_data)

set data_list = str.split(csv_data, ",")
print("List Size: " + len(data_list))
print("IP Addr  : " + data_list[0])
print("Port     : " + data_list[1])
print("Status   : " + data_list[2])
print(config["divider"])

# 5. TEST MERGE (Menggabungkan List menjadi String)
print("[TEST 4] Merge (Joining List)")
# Kita pakai list dari hasil split di atas
set new_format = str.merge(data_list, " | ")
print("Result   : " + new_format)

print(config["divider"])
print("All Tests Completed.")
